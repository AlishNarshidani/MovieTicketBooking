<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".EmployeeSideChooseUpcomingOrPastBookings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">



            <androidx.cardview.widget.CardView
                android:id="@+id/viewUpcomingBookings"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_margin="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:background="@drawable/bg_blue_gradient">

                        <TextView
                            android:id="@+id/title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Upcoming Bookings"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subtitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Block Seats or View Bookings"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:layout_below="@id/title2"
                            android:layout_marginTop="4dp" />

                        <ImageView
                            android:id="@+id/greaterThanSymbol2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="-10dp"
                            android:layout_below="@id/subtitle2"
                            android:src="@drawable/ic_greater_than"/>

                        <ImageView
                            android:id="@+id/icon2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleX="1.2"
                            android:scaleY="1.2"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/bookingshistory"
                            android:contentDescription="Essentials" />

                    </RelativeLayout>

                    <!-- Gradient Overlay for Text Visibility -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/gradient_overlay"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/viewPastBookings"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_margin="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:background="@drawable/bg_purple_gradient">

                        <TextView
                            android:id="@+id/title3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Past Bookings"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/subtitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Past Bookings"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:layout_below="@id/title3"
                            android:layout_marginTop="4dp" />

                        <ImageView
                            android:id="@+id/greaterThanSymbol3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="-10dp"
                            android:layout_below="@id/subtitle3"
                            android:src="@drawable/ic_greater_than"/>

                        <ImageView
                            android:id="@+id/icon3"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentEnd="true"
                            android:scaleX="1.2"
                            android:scaleY="1.2"
                            android:src="@drawable/bookingshistory"
                            android:contentDescription="Essentials" />

                    </RelativeLayout>

                    <!-- Gradient Overlay for Text Visibility -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/gradient_overlay"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
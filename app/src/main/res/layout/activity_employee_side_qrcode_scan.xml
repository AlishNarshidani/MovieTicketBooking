<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeSideQRCodeScanActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Booking Status -->
            <TextView
                android:id="@+id/txtBookingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Confirmed"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="4dp"/>

            <!-- Movie Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_theater_comedy_24"
                    app:tint="@android:color/black"/>

                <TextView
                    android:id="@+id/txtMovieName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Movie Name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:paddingStart="6dp"
                    android:paddingBottom="4dp"/>

            </LinearLayout>

            <!-- Theatre Details (Name & Location) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_theatre"
                    app:tint="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/txtTheatreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Theatre Name"
                    android:textSize="16sp"
                    android:textColor="@android:color/darker_gray"
                    android:paddingStart="6dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_add_location_24"
                    app:tint="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/txtTheatreLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Theatre Location"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:paddingStart="6dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="6dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_theatre"
                    app:tint="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/txtHallName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hall Name"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:paddingStart="6dp"/>
            </LinearLayout>

            <!-- Show Timings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/baseline_access_time_24"
                        app:tint="@android:color/holo_red_dark"/>

                    <TextView
                        android:id="@+id/txtShowStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start: 10:00 AM"
                        android:textSize="14sp"
                        android:textColor="@android:color/holo_red_dark"
                        android:paddingStart="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>

                    <TextView
                        android:id="@+id/txtShowEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End: 12:30 PM"
                        android:textSize="14sp"
                        android:textColor="@android:color/holo_red_dark"
                        android:paddingStart="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Selected Seats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/baseline_airline_seat_recline_normal_24"
                    app:tint="@android:color/black"/>

                <TextView
                    android:id="@+id/txtSelectedSeats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seats: A1, A2, A3"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:paddingStart="4dp"/>
            </LinearLayout>

            <!-- Total Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="6dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/baseline_account_balance_wallet_24"
                    app:tint="@android:color/holo_blue_dark"/>

                <TextView
                    android:id="@+id/txtTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price: â‚¹500"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"
                    android:paddingStart="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtTotalSeats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Seats"
        android:layout_below="@+id/cardView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingStart="6dp"
        android:paddingBottom="4dp"/>


    <TextView
        android:id="@+id/txtEnteredPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entered Persons"
        android:layout_below="@+id/txtTotalSeats"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingStart="6dp"
        android:paddingBottom="4dp"/>

    <Button
        android:id="@+id/btnAdmitPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make a Entry"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
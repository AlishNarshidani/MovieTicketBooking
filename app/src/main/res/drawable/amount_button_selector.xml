<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3"/> <!-- Red background when pressed -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- White border -->
        </shape>
    </item>

    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50"/> <!-- Green background when selected -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#FFFFFF"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF"/> <!-- Gray background for default state -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#BDBDBD"/> <!-- Light gray border -->
        </shape>
    </item>

</selector>